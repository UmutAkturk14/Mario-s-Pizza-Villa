<main class="page-content animate-fade-in my-4 w-full lg:w-2/3 2xl:w-1/3 m-auto flex flex-col justify-center">
  <p class="text-2xl text-white text-center font-heading underline underline-offset-4">Edit Profile</p>
  <%= simple_form_for @user  do |f| %>
  <%= f.input :first_name,
    label_html: { class: "text-white font-bold font-heading" },
    wrapper_html: { class: "flex justify-between items-center m-2 p-4" },
    input_html: { class: "rounded-xl w-1/2 bg-rose-100" }

  %>
  <%= f.input :last_name,
    label_html: { class: "text-white font-bold font-heading" },
    wrapper_html: { class: "flex justify-between items-center m-2 p-4" },
    input_html: { class: "rounded-xl w-1/2 bg-rose-100" }

  %>
  <%= f.input :address,
    label_html: { class: "text-white font-bold font-heading" },
    wrapper_html: { class: "flex justify-between items-center m-2 p-4" },
    input_html: { class: "rounded-xl bg-rose-100" }

  %>
  <%= f.input :email,
    label_html: { class: "text-white font-bold font-heading" },
    wrapper_html: { class: "flex justify-between items-center m-2 p-4" },
    input_html: { class: "rounded-xl bg-rose-100" }

  %>
  <div class="flex justify-center">
    <%= f.button :submit, class: "bg-rose-500 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-rose-400 focus:outline-none focus:ring focus:ring-blue-300 w-3/4 md:w-2/3 xl:w-1/2 m-auto" %>
  </div>
<% end %>
</main>

<script>
  $("main").fadeIn(500)
</script>
